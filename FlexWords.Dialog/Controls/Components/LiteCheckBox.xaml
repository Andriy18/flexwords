<UserControl x:Class="FlexWords.Dialog.Controls.Components.LiteCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlexWords.Dialog.Controls.Components"
             mc:Ignorable="d" 
             Background="Transparent"
             Width="54" Height="30"
             Loaded="OnLiteCheckBoxLoaded">
    <Border Name="__border"
            BorderBrush="#E5E5E5"
            Background="#242424"
            BorderThickness="1"
            CornerRadius="15"
            Padding="2">
        <Border Name="__internal_border"
                CornerRadius="12"
                Background="#2E2E2E">
            <Border Name="__slider"
                    Width="24"
                    Margin="24 0 0 0"
                    CornerRadius="12"
                    BorderThickness="0"
                    Background="#92E492"
                    HorizontalAlignment="Left">
            </Border>
        </Border>
    </Border>
</UserControl>
